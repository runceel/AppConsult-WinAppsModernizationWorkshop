<Window
    x:Class="Contoso.Expenses.WinddowsAppSdk.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Contoso.Expenses.WinddowsAppSdk.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Contoso.Expenses.WinddowsAppSdk"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Loaded="Grid_Loaded" Unloaded="Grid_Unloaded">
        <NavigationView
            x:Name="navigationView"
            BackRequested="NavigationView_BackRequested"
            IsBackButtonVisible="Auto"
            IsBackEnabled="{x:Bind frame.CanGoBack, Mode=OneWay}"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            PaneTitle="Contoso Expenses">
            <Frame x:Name="frame" Navigated="Frame_Navigated" />
        </NavigationView>
    </Grid>
</Window>
