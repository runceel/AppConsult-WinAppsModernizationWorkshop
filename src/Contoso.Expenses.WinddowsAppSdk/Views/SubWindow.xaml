<Window
    x:Class="Contoso.Expenses.WinddowsAppSdk.Views.SubWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Contoso.Expenses.WinddowsAppSdk.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <Border x:Name="AppTitleBar" VerticalAlignment="Top">
            <TextBlock
                x:Name="AppTitle"
                Margin="8"
                VerticalAlignment="Top"
                Text="Contoso Expenses" />
        </Border>
        <Frame x:Name="_frame" Grid.Row="1" />
    </Grid>
</Window>
